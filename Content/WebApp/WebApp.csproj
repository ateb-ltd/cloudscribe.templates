<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <UserSecretsId>WebApp-4BC5DF1F-B155-4A69-9719-0AB349B1ACB2</UserSecretsId>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <MvcRazorCompileOnPublish>false</MvcRazorCompileOnPublish>
  </PropertyGroup>

  <ItemGroup>
    <None Update="wwwroot\**\*;navigation.xml">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>

    <Content Remove="wwwroot\lib\**\*" CopyToPublishDirectory="Never" />
    <Content Remove="bower.json" CopyToPublishDirectory="Never" />
    <Content Remove="bundleconfig.json" CopyToPublishDirectory="Never" />
    <Content Remove="appsettings.Development.json" CopyToPublishDirectory="Never" />

    <Content Include="wwwroot\lib\**\*" CopyToPublishDirectory="Never" />
    <Content Include="bower.json" CopyToPublishDirectory="Never" />
    <Content Include="bundleconfig.json" CopyToPublishDirectory="Never" />
    <Content Include="appsettings.Development.json" CopyToPublishDirectory="Never" />

    <Content Include="**\sitefiles\**\wwwroot\**" CopyToPublishDirectory="PreserveNewest" />
    <Content Include="SharedThemes\**\wwwroot\**" CopyToPublishDirectory="PreserveNewest" />

  </ItemGroup>

  <ItemGroup>
    <Content Include=".template.config\template.json" />
  </ItemGroup>


  <ItemGroup Label="Package References">

    <PackageReference Include="cloudscribe.Core.Web.Mvc" Version="2.0.*" />
    <PackageReference Include="cloudscribe.Core.Storage.NoDb" Version="2.0.*" Condition="'$(DataStorage)' == 'NoDb'" />
    <PackageReference Include="cloudscribe.Core.Storage.EFCore.MSSQL" Version="2.0.*" Condition="'$(DataStorage)' == 'MSSQL'" />
    <PackageReference Include="cloudscribe.Core.Storage.EFCore.MySql" Version="2.0.*" Condition="'$(DataStorage)' == 'MySql'" />
    <PackageReference Include="cloudscribe.Core.Storage.EFCore.pgsql" Version="2.0.*" Condition="'$(DataStorage)' == 'pgsql'" />

    <PackageReference Include="cloudscribe.Core.SimpleContent.Mvc" Version="2.0.*" Condition="'$(SimpleContent)' == 'true'" />
    <PackageReference Include="cloudscribe.SimpleContent.Web.Mvc" Version="2.0.*" Condition="'$(SimpleContent)' == 'true'" />
    <PackageReference Include="cloudscribe.SimpleContent.MetaWeblog" Version="2.0.*" Condition="'$(SimpleContent)' == 'true'" />
    <PackageReference Include="cloudscribe.SimpleContent.Syndication" Version="2.0.*" Condition="'$(SimpleContent)' == 'true'" />
    <PackageReference Include="cloudscribe.Syndication.Web" Version="2.0.*" Condition="'$(SimpleContent)' == 'true'" />

    <PackageReference Include="cloudscribe.SimpleContent.Storage.NoDb" Version="2.0.*" Condition="'$(SimpleContent)' == 'true' AND $(DataStorage)' == 'NoDb'" />
    <PackageReference Include="cloudscribe.SimpleContent.Storage.EFCore.MSSQL" Version="2.0.*" Condition="'$(SimpleContent)' == 'true' AND $(DataStorage)' == 'MSSQL'" />
    <PackageReference Include="cloudscribe.SimpleContent.Storage.EFCore.MySQL" Version="2.0.*" Condition="'$(SimpleContent)' == 'true' AND $(DataStorage)' == 'pgMySqlsql'" />
    <PackageReference Include="cloudscribe.SimpleContent.Storage.EFCore.pgsql" Version="2.0.*" Condition="'$(SimpleContent)' == 'true' AND $(DataStorage)' == 'pgsql'" />

    <PackageReference Include="cloudscribe.Logging.Web" Version="2.1.*" />
    <PackageReference Include="cloudscribe.Logging.NoDb" Version="2.1.*" Condition="'$(Loggin)' == 'true' AND $(DataStorage)' == 'NoDb'" />
    <PackageReference Include="cloudscribe.Logging.EFCore.MSSQL" Version="2.1.*" Condition="'$(Loggin)' == 'true' AND $(DataStorage)' == 'MSSQL'" />
    <PackageReference Include="cloudscribe.Logging.EFCore.MySql" Version="2.1.*" Condition="'$(Loggin)' == 'true' AND $(DataStorage)' == 'MySql'" />
    <PackageReference Include="cloudscribe.Logging.EFCore.pgsql" Version="2.1.*" Condition="'$(Loggin)' == 'true' AND $(DataStorage)' == 'pgsql'" />

    <PackageReference Include="cloudscribe.Web.Localization" Version="2.0.*" />
    
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.*" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="2.0.*" PrivateAssets="All" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="2.0.*" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.EntityFrameworkCore.Tools.DotNet" Version="2.0.*" />
    <DotNetCliToolReference Include="Microsoft.Extensions.SecretManager.Tools" Version="2.0.*" />
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.*" />
  </ItemGroup>

</Project>
